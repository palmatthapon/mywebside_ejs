<!DOCTYPE html>
<html lang="en">
<head>
 <% include partials/head %>
 <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
 <script src="http://code.jquery.com/jquery-1.8.2.min.js"></script>
 <!--
    <style>
        body {
            padding-top: 80px;
        }
    </style>
 -->
</head>
<body>
<% include partials/menu %>
<script src="/javascripts/dropdown.js"></script>


<div class="main container">
    <tr>
        <div class="col-md-6 col-md-offset-3">
            <h1 class="display-4 m-b-2">
                    edit item
            </h1>
            
                <!--upload form-->
                <form id="update-form" action="edit/change" method="POST" >
                    <div class="form-group">
                            <label for="itemid">
                                ID:
                            </label>
                            <input class="form-control" id="itemid" type="number" name="itemid" value="<%= item[0].item_id %>" readonly>
    
                        </div>
                    <div class="form-group">
                        <label for="name1">
                            Head:
                        </label>
                        <input class="form-control" id="name2" type="text" placeholder="name3" name="name" value="<%= item[0].name %>" required>

                    </div>
                    <div class="form-group">
                        <label for="images">
                            Image:        
                        </label>
                            <% if(item[0].pic1!=null) { %>
                                <img class ="" src="/uploads/<%= item[0].pic1 %>" alt="Image" width="120" height="100%"/>
                            <% } %>
                            <% if(item[0].pic2!=null) { %>
                                <img class ="" src="/uploads/<%= item[0].pic2 %>" alt="Image" width="120" height="100%"/>
                            <% } %>
                            <% if(item[0].pic3!=null) { %>
                                <img class ="" src="/uploads/<%= item[0].pic3 %>" alt="Image" width="120" height="100%"/>
                            <% } %>
                            <% if(item[0].pic4!=null) { %>
                                <img class ="" src="/uploads/<%= item[0].pic4 %>" alt="Image" width="120" height="100%"/>
                            <% } %>
                            <% if(item[0].pic5!=null) { %>
                                <img class ="" src="/uploads/<%= item[0].pic5 %>" alt="Image" width="120" height="100%"/>
                            <% } %>
                    </div>
                    <div class="form-group">
                        <label for="detail">
                            Detail:       
                        </label>
                        <textarea class="form-control" name="detail" placeholder="detail" rows="5" style="width:100%; height:150px;"  ><%= item[0].detail %></textarea>
                    </div>
                    <div class="form-group">
                            <label for="status">
                                    Status:       
                                </label>
                                      <select class="form-control <%=(item[0].status==0)?'btn-danger':'btn-success'%>" name="status" id="status" onclick="dropdownclicked(event)">
                                            <option class="btn-success" value="1" <% if(item[0].status==1){%>selected<%}%> >in stock</option>
                                            <option class="btn-danger" value="0" <% if(item[0].status==0){%>selected<%}%> >out of stock</option>
                                        </select>

                    </div>
                    <div class="form-group">
                        <label for="weight">
                            Weight:       
                        </label>
                        <input class="form-control" id="weight" type="number" placeholder="kg." name="weight" value="<%= item[0].weight %>" >
                    </div>
                    <div class="form-group">
                        <label for="price">
                            Price:       
                        </label>
                        <input class="form-control" id="price" type="number" placeholder="baht" name="price" value="<%= item[0].price %>" >
                    </div>
                    <div class="form-group">
                            <label for="tag">
                                Tag:       
                            </label>
                            <input class="form-control" id="tag" type="text" placeholder="tag" name="tag" value="<%= item[0].tag %>" >
                            <% for(var i=0; i < tags.length; i++) { %>
                                <button type="button" onclick="clickTag('<%= tags[i].tag %>')" class="btn btn-outline-secondary glyphicon glyphicon-tag"><%= tags[i].tag %></button>
                              <% } %>
                        </div>
                    <button class="btn btn-primary " onclick="clicked(event)" type="submit">
                            Update
                    </button>
                </form>
        </div>
            
    </tr>
</div>



</body>
<% include partials/script %>
</html>