<!DOCTYPE html>
<html lang="en">
<head>
 <% include partials/head %>
 <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
 <!--
    <style>
        body {
            padding-top: 80px;
        }
    </style>
 -->
</head>
<body>
<% include partials/menu %>

<div class="main container">
    <tr>
        <div class="col-md-6 col-md-offset-3">
            <h1 class="display-4 m-b-2">
                    edit item
            </h1>
                <!--upload form-->
                <form id="update-form" action="edit/change" method="POST" >
                    <div class="form-group">
                            <label for="itemid">
                                ID:
                            </label>
                            <input class="form-control" id="itemid" type="number" name="itemid" value="<%= item[0].item_id %>" readonly>
    
                        </div>
                    <div class="form-group">
                        <label for="name1">
                            Head:
                        </label>
                        <input class="form-control" id="name2" type="text" placeholder="name3" name="name" value="<%= item[0].name %>">

                    </div>
                    <div class="form-group">
                        <label for="images">
                            Image:        
                        </label>
                            <% if(item[0].pic1!=null) { %>
                                <img class ="" src="/uploads/<%= item[0].pic1 %>" alt="Image" width="120" height="100%"/>
                            <% } %>
                            <% if(item[0].pic2!=null) { %>
                                <img class ="" src="/uploads/<%= item[0].pic2 %>" alt="Image" width="120" height="100%"/>
                            <% } %>
                            <% if(item[0].pic3!=null) { %>
                                <img class ="" src="/uploads/<%= item[0].pic3 %>" alt="Image" width="120" height="100%"/>
                            <% } %>
                            <% if(item[0].pic4!=null) { %>
                                <img class ="" src="/uploads/<%= item[0].pic4 %>" alt="Image" width="120" height="100%"/>
                            <% } %>
                            <% if(item[0].pic5!=null) { %>
                                <img class ="" src="/uploads/<%= item[0].pic5 %>" alt="Image" width="120" height="100%"/>
                            <% } %>
                    </div>
                    <div class="form-group">
                        <label for="detail">
                            Detail:       
                        </label>
                        <textarea class="form-control" name="detail" placeholder="detail" rows="5" style="width:100%; height:150px;" value="<%= item[0].detail %>"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="weight">
                            Weight:       
                        </label>
                        <input class="form-control" id="weight" type="number" placeholder="kg." name="weight" value="<%= item[0].weight %>">
                    </div>
                    <div class="form-group">
                        <label for="price">
                            Price:       
                        </label>
                        <input class="form-control" id="price" type="number" placeholder="baht" name="price" value="<%= item[0].price %>">
                    </div>
                    <div class="form-group">
                            <label for="tag">
                                Tag:       
                            </label>
                            <input class="form-control" id="tag" type="text" placeholder="tag" name="tag" value="<%= item[0].tag %>">
                        </div>
                    <button class="btn btn-primary " onclick="clicked(event)" type="submit">
                            Update
                    </button>
                </form>
        </div>
            
    </tr>
</div>
      
<script>
        function clicked(e)
        {
            if(!confirm('Are you sure?'))e.preventDefault();
        }
        </script>

</body>
<% include partials/script %>
</html>